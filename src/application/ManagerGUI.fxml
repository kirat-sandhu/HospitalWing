<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="680.0" prefWidth="806.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WingCode">
   <children>
      <HBox prefHeight="90.0" prefWidth="697.0">
         <children>
            <Label prefHeight="31.0" prefWidth="181.0" text="Enter Emplyee Id to seach" />
            <TextField fx:id="nurseIdTextField" prefHeight="32.0" prefWidth="163.0" />
            <Button fx:id="searchNurseButton" mnemonicParsing="false" onAction="#findNurse" prefHeight="33.0" prefWidth="166.0" text="Search" />
            <HBox prefHeight="61.0" prefWidth="192.0">
               <children>
                  <Label fx:id="nurseIDerrorLabel" prefHeight="35.0" prefWidth="148.0" textFill="#5e0707" />
               </children>
            </HBox>
         </children>
      </HBox>
      <Label prefHeight="33.0" prefWidth="591.0" text="To print all the nurses available in this wing, Click the button below" wrapText="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="printAllNurses" mnemonicParsing="false" onAction="#printAllNursesButtonPressed" prefHeight="25.0" prefWidth="148.0" text="Print all nurses" />
      <HBox prefHeight="80.0" prefWidth="675.0">
         <children>
            <Label prefHeight="72.0" prefWidth="611.0" text="To add a new nurse, Enter first name, last name and date of birth in 1st,2nd and 3rd fields below respectively" textFill="#d90f0f" wrapText="true">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="52.0" prefWidth="675.0">
         <children>
            <TextField fx:id="fNameTextfield" />
            <TextField fx:id="lNameTextfield" />
            <DatePicker fx:id="dobTextfield" />
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="167.0" text="Add nurse" />
         </children>
      </HBox>
      <Label fx:id="addNurseErrorLabel" prefHeight="49.0" prefWidth="615.0" />
      <HBox prefHeight="56.0" prefWidth="675.0" />
      <Button fx:id="doneButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" text="Done" />
   </children>
</VBox>
